<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DailyTask</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DailyTask.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="bg-white border-b border-gray-200 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between h-16">
                <div class="flex items-center space-x-4">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="text-xl font-bold text-gray-800">DailyTask</a>
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="text-gray-600 hover:text-gray-900">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy"
                       class="text-gray-600 hover:text-gray-900">Privacy</a>
                </div>
                <div class="flex items-center space-x-4">
                    <a asp-area="Identity" asp-page="/Account/Login"
                       class="text-blue-600 hover:text-blue-800">Login</a>
                    <a asp-area="Identity" asp-page="/Account/Register"
                       class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700">
                        Register
                    </a>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - DailyTask - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

